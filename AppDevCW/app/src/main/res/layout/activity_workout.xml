<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_workout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.scott.appdevcw.workout">

    <Button
        android:text="Finished!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:id="@+id/btnFinish"
        android:layout_alignTop="@+id/btnNext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"

        android:id="@+id/imageView"
        android:layout_below="@+id/txtExercise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="30sp"
        android:layout_above="@+id/btnNext"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="Total Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/timer"
        android:layout_toLeftOf="@+id/btnFinish"
        android:layout_toStartOf="@+id/btnFinish"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

    <Button
        android:text="Next!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/timer"
        android:layout_alignEnd="@+id/timer"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:text="Get Ready!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtReady"
        android:textSize="36sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtExercise"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/timer"
        android:layout_alignEnd="@+id/timer" />

</RelativeLayout>
